use this package ===>npm install @react-native-community/netinfo


import NetInfo from '@react-native-community/netinfo';

  const [isConnected, setIsConnected] = useState(true); // Initially assuming connected

  useEffect(() => {
    // Check network connectivity when component mounts
    const unsubscribe = NetInfo.addEventListener(state => {
      setIsConnected(state.isConnected);
    });

    // Cleanup function
    return () => {
      unsubscribe();
    };
  }, []);

  const handleLogin = () => {
    if (!isConnected) {
      Alert.alert('Please turn on mobile data or connect to a network');
      return;
    }

    // Proceed with login logic
    // ...
  };

